# ビルドステージ
FROM golang:1.23 AS builder

# コンテナ作業ディレクトリの設定
WORKDIR /app

# 必要なファイルのみをコピー
COPY ./migration/ ./migration/
COPY ./models/ ./models/
COPY ./repository/ ./repository/

# migrationディレクトリに移動
WORKDIR /app/migration

# 依存関係をダウンロード
RUN go mod download

# バイナリをビルド（静的リンク）
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o migration .

# 実行ステージ
FROM alpine:3.18

# 必要な証明書をインストール
RUN apk --no-cache add ca-certificates

# 作業ディレクトリを設定
WORKDIR /root/

# ビルドステージからバイナリのみをコピー
COPY --from=builder /app/migration/migration .

# 実行
CMD ["./migration"]